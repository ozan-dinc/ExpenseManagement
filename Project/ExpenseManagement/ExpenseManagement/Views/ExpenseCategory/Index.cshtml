@model IEnumerable<ExpenseCategoryEntity>

@{
    ViewData["Title"] = "Listing of All Expenses Categories";
}

<div>
    <div class="row pt-4">
        <div class="col-9">
            <h2 class="text-success">View Expenses Categories</h2>
        </div>
        <div class="col-3">
            <a asp-controller="ExpenseCategory" asp-action="Create" class="btn btn-primary">Add New Expense Category</a>
        </div>
    </div>
</div>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover table-striped" width="100%">
        <thead>
            <tr>
                <th>Expense Category Name</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">@item.ExpenseCategoryName</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="ExpenseCategory" asp-action="GetExpCatDetailsForUpdate" asp-route-id="@item.ExpenseCategoryId" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="ExpenseCategory" asp-action="GetExpCatDetailsForDelete" asp-route-id="@item.ExpenseCategoryId" class="btn btn-primary mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p class="text-center"><b>No Expense Category Created Yet</b></p>
}